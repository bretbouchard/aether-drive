  "microTimingValues": [
    "0 = Perfect grid",
    "±1-10 = Subtle humanization",
    "±11-20 = Noticeable push/pull",
    "±21-40 = Aggressive timing",
    "±41+ = Extreme offset"
  ],

  "timingRoles": [
    "Pocket = Centered (offset 0)",
    "Push = Ahead (offset +10 to +20)",
    "Pull = Behind (offset -10 to -20)"
